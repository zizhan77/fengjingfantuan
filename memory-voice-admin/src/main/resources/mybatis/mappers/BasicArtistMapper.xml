        update basic_artist set
        <trim suffixOverrides=",">
            <if test="artistName != null  and artistName != '' ">
                artist_name=#{artistName,jdbcType=VARCHAR},
            </if>
            <if test="thumbUrl != null  and thumbUrl != '' ">
                thumb_url=#{thumbUrl,jdbcType=VARCHAR},
